{
  "name": "Swift Development Environment",
  "image": "swift:5.9-jammy",
  "runArgs": [
    "--network=host"
  ],
  
  "customizations": {
    "vscode": {
      "extensions": [
        "sswg.swift-lang"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "swift.path.swift_driver": "/usr/bin/swift",
        "swift.path.swift_driver_bin": "/usr/bin/swift"
      }
    }
  },

  "postCreateCommand": "which swift && swift --version",
  
  "onCreateCommand": "echo 'Swift path: ' && which swift && ls -la /usr/bin/swift"
}
